@page
@model DAF_WEBAPP_V1._0._0.Pages.DONATIONS_MONEY.money_donationsModel
@{
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Donate Money </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
@*this page is for the money donations, note the form where user information will be captured*@
<br />
<h2>Donate Money to the Disaster Alleviation Foundation</h2>
<br />
<br />

@if (Model.errorMsg.Length > 0)@*if statement to display an alert message *@
            {
                <div class='alert alert-warning alert-dismissable fade show' role="alert">
                    <strong>@Model.errorMsg</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

<form method="POST">@*form method indicates the method the form will execute when submit is clicked, this form is for the POST() method*@
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Date</label>
        <div class="col-sm-3">
            <input type="date" class="form-control" name="date" value="@Model.donatedMoney.date" />@*Model is almost like the class we are working with, and we use Model as an object to retreive variables we have declared in the C# class (money_donations.cshtml) of this html page, and use them as the value of this textfield in the form*@
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Money (R)</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="money" value="@Model.donatedMoney.amount" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Donated By</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="donorName" value="@Model.donatedMoney.donorName" />
        </div>
    </div>

    @if (Model.successMsg.Length > 0)
            {
                <div class="row mb-3">
                    <div class="col-sm-9">
                        <div class='alert alert-success alert-dismissable fade show' role="alert">
                            <strong>@Model.errorMsg</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-2 d-grid">
            <button type="submit" class="btn btn-primary">Donate</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>